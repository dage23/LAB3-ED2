
@{
    ViewBag.Title = "Cifrado S-DES";    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Cifrado con método S-DES</h2>
@using (Html.BeginForm("CifradoSDES", "Encriptacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
 {
    <h2></h2>
    <h4>Ingrese un numero entre 0 y 1023</h4>
    <input type="number" name="clave">
    <h3></h3>
    <h4>Ingrese el archivo</h4>
    <input type="file" name="ArchivoImportado" />
    <h3></h3>
    <p>
        Acción a realizar:
        <input type="radio" name="Opcion" value="Cifrar"> Cifrar
        <input type="radio" name="Opcion" value="Descifrar"> Descifrar
    </p>
    <input type="submit" value="Importar" class="btn btn-default" />
 }

