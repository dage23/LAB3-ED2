
@{
    ViewBag.Title = "CifradoEspiral";
}

<h2>Cifrado con método Espiral</h2>
@using (Html.BeginForm("CifradoEspiral", "Encriptacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2></h2>
    <h4>Ingrese la Ancho de la matriz</h4>
    <input type="number" name="Ancho">
    <h3></h3>
    <h4>Ingrese el archivo</h4>
    <input type="file" name="ArchivoImportado" />
    <h3></h3>
    <p>
        Acción a realizar:
        <input type="radio" name="Opcion" value="Cifrar"> Cifrar
        <input type="radio" name="Opcion" value="Descifrar"> Descifrar
    </p>
    <h3></h3>
    <p>
        Dirección del espiral:
        <input type="radio" name="Direccion" value="Derecha"> A favor de las agujas del reloj
        <input type="radio" name="DireccionkAR" value="Abajo"> A favor de las agujas del reloj
    </p>
    <input type="submit" value="Importar" class="btn btn-default" />
}
